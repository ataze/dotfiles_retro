{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,

  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "#5B514F",
          "template": "{{ .UserName }} ",
          "properties": {
            "display_host": true
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "#3B6E8F",
          "template": "\ue725 {{ .HEAD }} ",
          "properties": {
            "fetch_status": true,
            "fetch_upstream_icon": true
          }
        },
        {
          "type": "shell",
          "style": "plain",
          "foreground": "#6F8F88",
          "template": "\uf120 {{ .Name }} "
        }
      ]
    },

    {
      "type": "prompt",
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "style": "plain",
          "foreground": "#C9822B",
          "template": "{{ .FormattedMs }}s"
        },
        {
          "type": "time",
          "style": "plain",
          "foreground": "#3FA7A3",
          "template": "{{ .CurrentDate | date .Format }}",
          "properties": {
            "time_format": "Mon 3:04 PM"
          }
        },
        {
          "type": "root",
          "style": "plain",
          "foreground": "#B13A34",
          "template": "\uf0e7"
        },
        {
          "type": "node",
          "style": "plain",
          "foreground": "#B89B2E",
          "template": "\ue718 {{ .Full }}"
        }
      ]
    },

    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "path",
          "style": "plain",
          "foreground": "#5B514F",
          "template": "\ue5ff {{ .Path }}",
          "properties": {
            "style": "agnoster_full",
            "home_icon": "~"
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "#B13A34",
          "foreground_templates": [
            "{{ if gt .Code 0 }}#B13A34{{ end }}"
          ],
          "template": " âœ— ",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    }
  ],

  "console_title_template": "{{ .Folder }}",

  "transient_prompt": {
    "background": "transparent",
    "foreground": "#5B514F",
    "template": "\ue285 "
  }
}
