<!--
    Name: Retro'25
    IsDark: False
    HasBlur: True
-->
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:m="http://schemas.modernwpf.com/2019"
    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Themes/Base.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- Blur behind the window -->
    <system:Boolean x:Key="ThemeBlurEnabled">True</system:Boolean>

    <!-- Main window background -->
    <Style
        x:Key="WindowBorderStyle"
        BasedOn="{StaticResource BaseWindowBorderStyle}"
        TargetType="{x:Type Border}">
        <Setter Property="BorderThickness" Value="3" />
        <Setter Property="BorderBrush" Value="#FF79746F" />
        <Setter Property="Background" Value="#FFF3F4EF"/>
        <Setter Property="CornerRadius" Value="6" />
        <Setter Property="UseLayoutRounding" Value="True" />
    </Style>

    <Style
        x:Key="WindowStyle"
        BasedOn="{StaticResource BaseWindowStyle}"
        TargetType="{x:Type Window}" />

    <Style x:Key="WindowRadius" TargetType="{x:Type Border}" />

    <!-- Query input text box -->
    <Style
        x:Key="QueryBoxStyle"
        BasedOn="{StaticResource BaseQueryBoxStyle}"
        TargetType="{x:Type TextBox}">
        <Setter Property="Foreground" Value="#FF2E2C2A" />
        <Setter Property="CaretBrush" Value="#FF2E2C2A" />
    </Style>

    <!-- Query suggestion text box -->
    <Style
        x:Key="QuerySuggestionBoxStyle"
        BasedOn="{StaticResource BaseQuerySuggestionBoxStyle}"
        TargetType="{x:Type TextBox}">
        <Setter Property="Foreground" Value="#FF6F6B66" />
    </Style>

    <!-- Clock panel -->
    <Style
        x:Key="ClockPanel"
        BasedOn="{StaticResource ClockPanel}"
        TargetType="{x:Type StackPanel}">
        <Setter Property="Margin" Value="0 0 20 0" />
    </Style>

    <!-- Time -->
    <Style
        x:Key="ClockBox"
        BasedOn="{StaticResource BaseClockBox}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF79746F" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="Bold" />
    </Style>

    <!-- Date -->
    <Style
        x:Key="DateBox"
        BasedOn="{StaticResource BaseDateBox}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF79746F" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <!-- Hide search icon -->
    <Style
        x:Key="SearchIconStyle"
        BasedOn="{StaticResource BaseSearchIconStyle}"
        TargetType="{x:Type Path}">
        <Setter Property="Visibility" Value="Collapsed" />
        <Setter Property="Width" Value="0" />
        <Setter Property="Height" Value="0" />
    </Style>

    <!-- Pending line -->
    <Style
        x:Key="PendingLineStyle"
        BasedOn="{StaticResource BasePendingLineStyle}"
        TargetType="{x:Type Line}">
        <Setter Property="Stroke" Value="#FF79746F" />
        <Setter Property="StrokeThickness" Value="2" />
    </Style>

    <!-- Separator -->
    <Style
        x:Key="SeparatorStyle"
        BasedOn="{StaticResource BaseSeparatorStyle}"
        TargetType="{x:Type Rectangle}">
        <Setter Property="Fill" Value="#FF79746F" />
        <Setter Property="Height" Value="2" />
        <Setter Property="Margin" Value="0 1 0 0" />
    </Style>

    <Thickness x:Key="ResultMargin">0</Thickness>

    <!-- Item title -->
    <Style
        x:Key="ItemTitleStyle"
        BasedOn="{StaticResource BaseItemTitleStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF2E2C2A" />
    </Style>

    <Style
        x:Key="ItemTitleSelectedStyle"
        BasedOn="{StaticResource BaseItemTitleSelectedStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FFB9B7B2" />
    </Style>

    <!-- Item subtitle -->
    <Style
        x:Key="ItemSubTitleStyle"
        BasedOn="{StaticResource BaseItemSubTitleStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF6F6B66" />
    </Style>

    <Style
        x:Key="ItemSubTitleSelectedStyle"
        BasedOn="{StaticResource BaseItemSubTitleSelectedStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FFB9B7B2" />
    </Style>

    <!-- Hotkey -->
    <Style x:Key="ItemHotkeyStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#FF79746F" />
    </Style>

    <Style x:Key="ItemHotkeySelectedStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="FontSize" Value="12" />
        <Setter Property="Foreground" Value="#FFB9B7B2" />
    </Style>

    <!-- Glyph -->
    <Style x:Key="ItemGlyph" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF79746F" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <Style x:Key="ItemGlyphSelectedStyle" TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FFB9B7B2" />
        <Setter Property="FontSize" Value="20" />
    </Style>

    <!-- Selected item -->
    <SolidColorBrush x:Key="ItemSelectedBackgroundColor" Color="#FF79746F"/>
    <CornerRadius x:Key="ItemRadius">0</CornerRadius>
    <Thickness x:Key="ItemMargin">0</Thickness>

    <!-- Highlight -->
    <Style x:Key="HighlightStyle">
        <Setter Property="Inline.Foreground" Value="#FF2E2C2A" />
    </Style>

    <!-- Scrollbar -->
    <Style
        x:Key="ScrollBarStyle"
        BasedOn="{StaticResource BaseScrollBarStyle}"
        TargetType="{x:Type ScrollBar}">
        <Setter Property="Width" Value="3" />
    </Style>

    <Style
        x:Key="ThumbStyle"
        BasedOn="{StaticResource BaseThumbStyle}"
        TargetType="{x:Type Thumb}">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type Thumb}">
                    <Border
                        Background="#FF79746F"
                        BorderThickness="0"
                        CornerRadius="3"/>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Preview -->
    <Style
        x:Key="PreviewBorderStyle"
        BasedOn="{StaticResource BasePreviewBorderStyle}"
        TargetType="{x:Type Border}">
        <Setter Property="BorderBrush" Value="#FF79746F" />
        <Setter Property="BorderThickness" Value="1 0 0 0" />
    </Style>

    <Style
        x:Key="PreviewItemTitleStyle"
        BasedOn="{StaticResource BasePreviewItemTitleStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF2E2C2A" />
        <Setter Property="FontSize" Value="14" />
    </Style>

    <Style
        x:Key="PreviewItemSubTitleStyle"
        BasedOn="{StaticResource BasePreviewItemSubTitleStyle}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF6F6B66" />
        <Setter Property="FontSize" Value="12" />
    </Style>

    <Style
        x:Key="PreviewGlyph"
        BasedOn="{StaticResource BasePreviewGlyph}"
        TargetType="{x:Type TextBlock}">
        <Setter Property="Foreground" Value="#FF79746F" />
    </Style>

</ResourceDictionary>
